extends ../layouts/catalog

include ../../blocks/modules/catalog-filter/catalog-filter
include ../../blocks/modules/catatog-subcat/catatog-subcat
include ../../blocks/modules/minicard/minicard
include ../../blocks/modules/pagination/pagination
include ../../blocks/modules/pagedesc/pagedesc
include ../../blocks/modules/menu-catalog/menu-catalog
include ../../blocks/modules/mobile-menu-button/mobile-menu-button

include ../../blocks/components/breadcrumb/breadcrumb
include ../../blocks/components/select/select

block variables
  include ../../data/catalog 
  include ../../data/filter 
  include ../../data/menu


block aside
  +catalog-filter(filter) 
block content
  .page-catalog
    .page-catalog__h1
      h1 Дверные замки
    .page-catalog__breadcrumb
      +breadcrumb(['Главная', 'Каталог фурнитуры'])
    .page-catalog__catig
      +catatog-subcat(subcat)
    .page-catalog__sort
      .page-catalog__sort-item
        span Сортировать:
        +select(['по умолчанию', 'по цене(по возростанию)', 'по цене(по убыванию)'])
    .page-catalog__list
      each item in catalog
        .page-catalog__item
          +minicard(item, true)
    .page-catalog__pagination
      +pagination()
    .page-catalog__desc
      +pagedesc()
  +menu-catalog(menu)
  +mobile-menu-button('фильтр','#ic_filter')




block scripts
  script(src="js/main.js")
  script(src="js/vendor.js")