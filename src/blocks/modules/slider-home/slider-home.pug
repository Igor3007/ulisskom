mixin slider-home(data)
  .slider-home.owl-carousel
    each item in data
      .slider-home__slide(style={'background-color': item.bgColor, 'color': item.textColor})
        .slider-home__slide-wrp
          .slider-home__text
            .slider-home__title
              a(href="sale.html" style={'color': item.textColor})= item.title
            .slider-home__subtitle= item.subtitle
            .slider-home__btn
              span
                a(href="#")
                  svg(width='38' height='38' stroke=""+item.textColor+"")
                    use(xlink:href="/img/sprites/sprite.svg#ic_slide-btn") 
          .slider-home__image
            span(style='background-image: url('+item.img+')')
